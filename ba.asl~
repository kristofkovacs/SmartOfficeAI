+!catastrophe : firealert <- .print("Tûzoltók értesítése");
								.send(ta,tell,phonefire);
								.print("Menekülõutak biztosítása.");
								.send(ta,tell,phonefire);
								.print("Liftek megálltása a legközelebbi emeleten.");
								.send(ta,tell,phonefire);
