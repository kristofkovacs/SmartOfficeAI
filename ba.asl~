/* Plans */



+firealert[source(A)]: true <- .print("Tüz elleni protokol indítása"); !catastrophe.


+nofirealert[source(A)]: true <- .print("Minden rendben").

+robbery[source(A)]: true <- .print("Betörés elleni protokol indítása"); !catastrophe.

